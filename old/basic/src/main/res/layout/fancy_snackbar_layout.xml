<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/styleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:elevation="0dp"
    android:padding="0dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="?attr/colorSurfaceInverse">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/snackbar_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorSurfaceInverse"
            android:padding="8dp"
            android:text="textView"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnSurfaceInverse"
            android:textSize="18sp"
            app:icon="@drawable/baseline_content_copy_24"
            app:iconGravity="end"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSurfaceInverse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/snackbar_btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/snackbar_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorSurfaceInverse"
            android:padding="0dp"
            android:text="@null"
            android:textSize="18sp"
            app:icon="@drawable/baseline_content_copy_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="?attr/colorOnSurfaceInverse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/snackbar_btn3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="48dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/snackbar_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorSurfaceInverse"
            android:text="@null"
            android:textSize="18sp"
            app:icon="@drawable/baseline_share_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="?attr/colorOnSurfaceInverse"
            app:layout_constraintBottom_toBottomOf="@+id/snackbar_btn1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/snackbar_btn1"
            app:layout_constraintWidth_max="48dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>